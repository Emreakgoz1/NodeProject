<h1>Kayit Ol</h1>
<% if(typeof errors !='undefined' && errors.length > 0) { %>
<div style="background-color: red; padding: 5px; color: white">
  <% for( let error of errors) { %> <%=error.msg%> <br />
  <% } %>
</div>
<% } %>
<br />
<br />
<form action="/auth/register" enctype="multipart/form-data" method="post">
  <input
    type="text"
    name="username"
    placeholder="Kullanıcı Adı"
    value="<%= typeof formData != 'undefined' ? formData.username : '' %>"
  />
  <input
    type="email"
    name="email"
    placeholder="E-posta"
    value="<%= typeof formData != 'undefined' ? formData.email : '' %>"
  />
  <br />

  <br />
  <input type="password" name="password" placeholder="Parola" /> <br />

  <input
    type="password"
    name="passwordConfirmation"
    placeholder="Parola(Tekrar)"
  />
  <input type="file" name="avatar" /> <br />

  <br />
  <button type="submit">Kayit Ol</button>
</form>
